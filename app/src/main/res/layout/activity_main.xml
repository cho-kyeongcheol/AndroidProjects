<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/app_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E33F0B"
        android:onClick="AppLogin"
        android:text="출결앱 로그인"
        android:textSize="30sp" />

    <Button
        android:id="@+id/naver_gourl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4CAF50"
        android:onClick="NaverLoginurl"
        android:text="네이버 접속하기"
        android:textSize="30sp" />

    <Button
        android:id="@+id/hp_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#3F51B5"
        android:onClick="HpTel"
        android:text="전화걸기"
        android:textSize="30sp" />

</LinearLayout>